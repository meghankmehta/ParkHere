<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lender_delete_spot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparkleusc.sparklesparkhere.LenderDeleteSpotActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/editTimeAvailableED" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTimeAvailableED"
        android:layout_alignStart="@+id/editTimeAvailableED"
        android:layout_marginTop="52dp"
        android:id="@+id/editPriceET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/deleteSpotButton"
        android:layout_alignStart="@+id/editPriceET"
        android:layout_marginBottom="26dp"
        android:id="@+id/editDescriptionET" />

    <Button
        android:text="Edit Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPictureButton"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/editDescriptionET"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Submit Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_below="@+id/editDescriptionET"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <Button
        android:text="Delete Spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteSpotButton"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
