<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lender_delete_spot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparkleusc.sparklesparkhere.LenderDetailedListingsActivity">


    <EditText
        android:hint="Insert Time Available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/Time"
        android:layout_below="@+id/dateET"
        android:layout_alignEnd="@+id/dateET" />

    <Button
        android:text="Create New Spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createNewSpotButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="*Insert Name of Lender*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTV"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/descriptionTV" />

    <EditText
        android:hint="Title of Parking Spot*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/titleOfParkingSpotTV"
        android:layout_below="@+id/nameTV"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint=" Insert Dates Available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateET"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/titleOfParkingSpotTV"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Description of Spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/descriptionTV"
        android:layout_below="@+id/Time"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/titleOfParkingSpotTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp" />

</RelativeLayout>

