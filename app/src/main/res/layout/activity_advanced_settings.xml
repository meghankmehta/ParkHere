<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_advanced_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sparkleusc.sparklesparkhere.AdvancedSettingsActivity">


    <TextView
        android:text="Max Price ($/hr):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/distanceSeekBar"
        android:max="3"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/priceSeekBar"
        android:progress="2" />

    <Button
        android:text="Enter Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/doneButton" />

    <CheckBox
        android:text="Handicapped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/handicappedCB"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Compact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compactCB"
        android:layout_alignBaseline="@+id/handicappedCB"
        android:layout_alignBottom="@+id/handicappedCB"
        android:layout_toEndOf="@+id/doneButton" />

    <CheckBox
        android:text="Tandem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tandemCB"
        android:layout_below="@+id/handicappedCB"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Covered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coveredCB"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lenderRatingBar"
        android:progressTint="#FFCC00"
        android:layout_above="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priceSeekBar"
        android:max = "100"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:progress="10" />

    <TextView
        android:text="$0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/priceSeekBar"
        android:layout_alignEnd="@+id/textView15" />

    <TextView
        android:text="Max Distance (mi):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="0 mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_below="@+id/distanceSeekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="3 mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/distanceSeekBar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Minimum Lender Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/compactCB" />

    <CheckBox
        android:text="Truck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/truckCB"
        android:layout_below="@+id/handicappedCB"
        android:layout_alignStart="@+id/handicappedCB" />

    <Button
        android:text="Enter End Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endTimeButton"
        android:layout_alignBaseline="@+id/startTimeButton"
        android:layout_alignBottom="@+id/startTimeButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Enter Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/startTimeButton"
        android:layout_below="@+id/tandemCB"
        android:layout_alignStart="@+id/textView12" />

    <Button
        android:text="Enter Start Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDateButton"
        android:layout_above="@+id/doneButton"
        android:layout_alignStart="@+id/startTimeButton" />

    <Button
        android:text="Enter End Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterEndDate"
        android:layout_below="@+id/endTimeButton"
        android:layout_alignStart="@+id/endTimeButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceTV"
        android:layout_above="@+id/distanceSeekBar"
        android:layout_centerHorizontal="true"
        android:text="2 miles" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceTV"
        android:text="$10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/startDateButton" />

    <TextView
        android:text="$100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_above="@+id/textView14"
        android:layout_alignEnd="@+id/enterEndDate" />

</RelativeLayout>
